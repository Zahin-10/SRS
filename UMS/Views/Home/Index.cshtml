@model IEnumerable<UMS.Entity.Category>
    @{
        ViewBag.Title = "Home";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <div class="container-fluid text-center" style=" padding-left: 5%;padding-right: 5%;">
        <div class="row">
            <div class="col-lg-12">
                <br />
                <br />
                <br />
                <br />
                <span id="greetings">Good Morning!</span>
                <h3><b>What would you like to eat today?</b></h3>
                <br />
                <br />
                <br />
                <br />
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class='col-sm-6 col-lg-3 tile'>
                    <div class='overlay'>
                        <div class='overlay-content'>

                            <div class='overlay-post-head'>
                                <h4 style="background-color: rgba(239, 41, 41, 0.6); padding: 5px;">@Html.DisplayFor(modelItem => item.name)</h4>
                            </div>
                        </div>
                    </div>
                    <a href="/Menu/MenuView?catId=@Url.Content(item.Id.ToString())">
                        <img class='img-responsive' src="images/@Url.Content(item.name)@Html.Raw(".png")" alt="">
                    </a>
                </div>
            }


        </div>


    </div>
