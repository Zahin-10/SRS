@model UMS.Entity.Student

@{
    ViewBag.Title = "Student | Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Back to List", "Index")
<br />
<br/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Student</legend>
        @Html.HiddenFor(model => model.Id)

        @Html.LabelFor(model => model.Name)<br />
        @Html.EditorFor(model => model.Name)
        <br />
        @Html.LabelFor(model => model.Cgpa)<br />
        @Html.EditorFor(model => model.Cgpa)
        <br />
        @Html.LabelFor(model => model.Department)<br />
        @Html.DropDownList("departmentId", (IEnumerable<SelectListItem>)ViewBag.departmentSelectList)
        <hr />
        <input type="submit" value="Save" />
    </fieldset> 
}
<br/>
@ViewBag.Message
