@model IEnumerable<UMS.Entity.Invoice>

@{
    ViewBag.Title = "OrderList1";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<style>
    .table {
        width: 100%;
        margin-bottom: 20px;
        position: absolute;
        left: 1%;
    }
</style>




<div class="col-md-9 admin_right">
    
    <table class="table">
    <h2 style="Padding-left:30%">Invoice Details</h2>
        
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.uid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.totalPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.promoId)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.uid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.totalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.promoId)
                    </td>
                    <td>            @Html.ActionLink("OrderDetail", "OrderDetail", new { id=item.Id })
                    </td>
                </tr>
            }
        </table>
        
    </div>


